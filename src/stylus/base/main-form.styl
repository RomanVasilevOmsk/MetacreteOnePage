.main-form
  width 100%
  margin-top 10px

  &__name, &__phone, &__comment
    outline none

  &__phone
    margin 0 auto
    width 265px
    height 30px
    display block
    border 2px solid rgba(0, 0, 0, 0.82)
    font-size 20px
    padding 5px 15px
    background-color #fff
    background-size cover
    @media (max-width: 414px)
      width 230px

  &__desc
    color #fcda14
    text-align center
    padding 12px 0 30px 0px

  &__message
    color #fcda14
    text-align center
    max-width 460px
    margin 10px auto
    font-weight 400
    font-family 'Roboto', sans-serif
    font-size 20px
    @media (max-width: 414px)
      font-size 16px

  &__link
    color #fcda14
    &:hover
      text-decoration none

  ::-webkit-input-placeholder {color:#000;font-weight: 400; font-family: 'Roboto', sans-serif;}
  ::-moz-placeholder          {color:#000;font-weight: 400; font-family: 'Roboto', sans-serif;}/* Firefox 19+ */
  :-moz-placeholder           {color:#000;font-weight: 400; font-family: 'Roboto', sans-serif;}/* Firefox 18- */
  :-ms-input-placeholder      {color:#000;font-weight: 400; font-family: 'Roboto', sans-serif;}