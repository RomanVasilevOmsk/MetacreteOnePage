.modal-form
  width 100%

  &__phone
    margin 0 auto
    width 100%
    max-width 300px
    height 40px
    display block
    border 2px solid rgba(0,0,0,0.82)
    font-size 20px
    padding 5px 15px
    background url(../images/main-form-input-phone.jpg) no-repeat
    background-size cover
    &:focus
      outline none
    &--features
      max-width 280px
      width 100%
      display block
      margin 20px auto 10px auto
      @media (max-width: 410px)
        width 84%

  &__desc
    color #fff
    margin 10px auto 0 auto
    width 90%

  &__link
    color #f3d313
    &:hover
      text-decoration none